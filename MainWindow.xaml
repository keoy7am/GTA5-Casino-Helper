<Controls:MetroWindow x:Class="GTA5_Casino_Helper.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="GTA 5 Casino Helper"
                      Height="200"
                      Width="525" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btn_EarnMoneyByHB" Grid.Column="0" Margin="10,5" Content="Earn money By Horse Betting" IsEnabled="False" Click="btn_EarnMoneyByHB_Click"/>
            <Button x:Name="btn_EarnMoneyByRR" Grid.Column="1" Margin="10,5" Content="Earn Money By Russian Roulette" IsEnabled="False" Click="btn_EarnMoneyByRR_Click" />
        </Grid>
        <Grid Grid.Row="1">
            <TextBox x:Name="StatusBar" Margin="10,0" IsEnabled="True" Text="Status：Wait for the game to open (click it to check)" VerticalAlignment="Center" PreviewMouseDown="StatusBar_PreviewMouseDown" />
        </Grid>

    </Grid>
</Controls:MetroWindow>
