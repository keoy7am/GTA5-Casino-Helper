<Controls:MetroWindow x:Class="GTA5_Casino_Helper.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="GTA 5 Casino Helper"
                      Height="200"
                      Width="525" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin="10,5" Content="Earn money By Horse Betting" IsEnabled="False"/>
            <Button Grid.Column="1" Margin="10,5" Content="Earn Money By Russian Roulette" IsEnabled="False" />
        </Grid>
        <Grid Grid.Row="1">
            <TextBox Margin="10,0" IsEnabled="False" Text="Status：Wait for the game to open" VerticalAlignment="Center"/>
        </Grid>

    </Grid>
</Controls:MetroWindow>
