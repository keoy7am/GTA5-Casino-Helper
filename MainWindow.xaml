<Controls:MetroWindow x:Class="GTA5_Casino_Helper.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="GTA 5 Casino Helper"
                      Height="310.562"
                      Width="525" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btn_EarnMoneyByHB" Grid.Column="0" Margin="10,5" Content="Earn money By Horse Betting" IsEnabled="False" Click="btn_EarnMoneyByHB_Click"/>
            <Grid  Grid.Column="1" Margin="10,5" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="8*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button x:Name="btn_EarnMoneyByRR" Grid.Row="0" Content="Earn Money By Russian Roulette" IsEnabled="False" Click="btn_EarnMoneyByRR_Click" />
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0">Number</Label>
                    <Label VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1">Amount</Label>
                </Grid>
                <Grid Grid.Row="2" Margin="0,0,0,-5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="cb_RR_Number" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" SelectionChanged="cb_RR_Number_SelectionChanged"/>
                    <ComboBox x:Name="cb_RR_Amount" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" SelectionChanged="cb_RR_Amount_SelectionChanged" />
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <TextBox x:Name="StatusBar" Margin="10,0" IsEnabled="True" Text="Status：Wait for the game to open (click it to check)" VerticalAlignment="Center" PreviewMouseDown="StatusBar_PreviewMouseDown" />
        </Grid>

    </Grid>
</Controls:MetroWindow>
